{
  "name": "ts-express-rest-api",
  "version": "1.0.0",
  "description": "Typescript Starter for ExpressJS REST API projects",
  "main": "dist/index.js",
  "author": "Victor Torres",
  "license": "MIT",
  "scripts": {
    "prestart": "npm run build",
    "start": "npm run serve",
    "serve": "node dist/index.js",
    "serve-watch": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run build-watch\" \"npm run serve-watch\"",
    "build": "npm run lint && npm run build-ts && npm run copy-static-assets",
    "build-ts": "tsc",
    "build-watch": "tsc -w",
    "test": "cross-env LOG_ENABLED=false jest",
    "test-coverage": "cross-env LOG_ENABLED=false jest --forceExit --coverage --verbose",
    "test-watch": "npm run test -- --watchAll",
    "lint": "eslint ./src/*.ts ./src/**/*.ts",
    "lint:fix": "eslint --fix ./src/*.ts ./src/**/*.ts",
    "copy-static-assets": "node copyStaticAssets.js",
    "format:fix": "pretty-quick --staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:fix && npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "_moduleAliases": {
    "@src": "dist"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.32",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv-safe": "^8.1.1",
    "@types/express": "^4.17.8",
    "@types/helmet": "0.0.48",
    "@types/jest": "^26.0.13",
    "@types/node": "^14.6.4",
    "@types/pino": "^6.3.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cuid": "^2.1.8",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-pino-logger": "^5.0.0",
    "helmet": "^4.1.0",
    "module-alias": "^2.2.2",
    "pg-promise": "^10.6.1",
    "pino": "^6.6.0"
  }
}
